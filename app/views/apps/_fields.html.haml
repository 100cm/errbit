%div.required
  = f.label :name
  = f.text_field :name
  
%div.checkbox
  = f.check_box :resolve_errs_on_deploy
  = f.label :resolve_errs_on_deploy, 'Resolve errs on deploy'
  
%fieldset.nested-wrapper
  %legend Watchers
  - f.fields_for :watchers do |w|
    %div.nested
      %div
        = w.label :user
        = w.select :user_id, User.all.map{|u| [u.name,u.id]}, :include_blank => '-- Select a User --'
      %strong.option - OR -
      %div
        = w.label :email
        = w.text_field :email